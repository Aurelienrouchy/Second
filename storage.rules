rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to their own folders
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload product images
    match /products/{productId}/{allPaths=**} {
      allow read: if true; // Public read for product images
      allow write: if request.auth != null;
    }

    // Allow authenticated users to upload article images
    match /articles/{articleId}/{allPaths=**} {
      allow read: if true; // Public read for article images
      allow write: if request.auth != null;
    }

    // Allow authenticated users to upload draft images (for AI analysis)
    // Images are organized by draft ID and cleaned up when draft is deleted
    // Updated: 2026-01-23
    match /drafts/{draftId}/{allPaths=**} {
      allow read: if true; // Public read for preview during creation
      allow write: if request.auth != null; // Authenticated users can write
    }

    // Allow authenticated users to upload avatars
    match /avatars/{userId} {
      allow read: if true; // Public read for avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}



